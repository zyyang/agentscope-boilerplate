# 使用官方 Node.js LTS 版本作为基础镜像
FROM node:23-alpine

# 设置环境变量
ENV NODE_ENV=production \
    STUDIO_PORT=3000

# 安装 curl 用于健康检查
RUN apk add --no-cache curl

# 设置工作目录
WORKDIR /app

# 安装全局依赖
RUN npm install -g @agentscope/studio

# 创建非 root 用户运行应用
RUN addgroup -S studio && adduser -S studio -G studio && \
    chown -R studio:studio /app

# 切换到非 root 用户
USER studio

# 暴露端口
EXPOSE 3000

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:3000 || exit 1

# 启动命令
CMD ["as_studio"]